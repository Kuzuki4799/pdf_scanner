<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/dimen_18dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_selected_state"
        android:layout_width="@dimen/dimen_23dp"
        android:layout_height="@dimen/dimen_23dp"
        android:buttonTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selector_pdf_size_symbol" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_size"
        style="@style/textNormalBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:gravity="start"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="#031c36"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_selected_state"
        app:layout_constraintStart_toEndOf="@+id/iv_selected_state"
        app:layout_constraintTop_toTopOf="@+id/iv_selected_state" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_size_wh"
        style="@style/textNormalBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:includeFontPadding="false"
        android:lines="1"
        android:textColor="#586781"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_selected_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_selected_state" />
</androidx.constraintlayout.widget.ConstraintLayout>
